# ~/.bash_profile for Fedora
#
# Created on: Jul 31 2022
# Created by gojun077
# Last Updated: Jul 31 2022
#
# These settings are sourced by the login shell

if [ -f ~/.bashrc ]; then
  source ~/.bashrc
fi

# set PATH so it includes user's private bin if it exists
if [ -d "$HOME/bin" ] ; then
    PATH="$HOME/bin:$PATH"
fi

# set PATH so it includes user's private bin if it exists
if [ -d "$HOME/.local/bin" ] ; then
    PATH="$HOME/.local/bin:$PATH"
fi

if [ -d ~/.cargo ]; then
  source "$HOME/.cargo/env"
fi

eval $(keychain --eval --quiet --agents gpg --gpg2 --noask)

GPG_TTY=$(tty)
export GPG_TTY
export GOROOT=/usr/local/go
export GOPATH=$HOME/go
export PYTHONBREAKPOINT=ipdb.set_trace
export PATH="/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin:$GOPATH/bin:$GOROOT/bin:$PATH"
export SSH_AUTH_SOCK="$XDG_RUNTIME_DIR/ssh-agent.socket"
export TERM=xterm-256color
